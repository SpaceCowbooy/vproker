@model vproker.Models.Maintain
@{
    ViewBag.Title = "Редактирование Инструмента";
}
<div>
    <form asp-controller="Tool" asp-action="Update" method="post" asp-route-id="@Model.ID">
        @*<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>*@
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div>
                @Html.TextAreaFor(e => e.Description, 1, 55, null)
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FinishedDate"></label>
            <input asp-for="FinishedDate" class="form-control" />
            <span asp-validation-for="FinishedDate" class="text-danger"></span>
        </div>
        <p>
            <input type="submit" class="btn btn-primary" value="Сохранить" />
            <a asp-action="Index" class="btn btn-default">Отмена</a>
        </p>
    </form>
</div>

