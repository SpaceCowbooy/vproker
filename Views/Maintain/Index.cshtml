@model IEnumerable<vproker.Models.Maintain>
@{
    ViewBag.Title = "Обслуживание инструмента";
}
@section Scripts {
    <script src="~/ts/utils.js"></script>
}
<p>
    <a asp-action="Create">Новое Обслуживание</a>
</p>

<div class="container">
    <div id="toolbar">
    </div>

    <table id="table" class="table table-striped table-responsive"
           data-toggle="table"
           data-url="/api/maintain"
           data-toolbar="#toolbar"
           data-sort-name="date"
           data-sort-order="asc"
           data-pagination="true"
           data-search="true"
           data-locale="ru-RU"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-page-size="50">
        <thead>
            <tr>
                <th data-field="date" data-sortable="true" data-formatter="vproker.Utils.dateFormatter">@Html.DisplayNameFor(model => model.Date)</th>
                <th data-field="name" data-sortable="true">@Html.DisplayNameFor(model => model.Name)</th>
                <th data-field="tool.name" data-sortable="true">@Html.DisplayNameFor(model => model.Tool)</th>
                <th data-field="description" data-sortable="true">@Html.DisplayNameFor(model => model.Description)</th>
                <th data-field="materials" data-sortable="true">@Html.DisplayNameFor(model => model.Materials)</th>
                <th data-field="engineHours" data-sortable="true">@Html.DisplayNameFor(model => model.EngineHours)</th>
                <th data-field="finishedDate" data-sortable="true" data-formatter="vproker.Utils.dateFormatter">@Html.DisplayNameFor(model => model.FinishedDate)</th>
                <th data-field="id" data-width="50" data-align="center" data-halign="center" data-formatter="vproker.Utils.getMaintainActions">Действия</th>
            </tr>
        </thead>
    </table>
</div>


