@model vproker.Models.Maintain

@{
    ViewBag.Title = "Подтвердите удаление обслуживание";
}

<h3>Удалить это обслуживание?</h3>

@if (ViewBag.Retry)
{
    <p class="alert-danger">Ошибка при удалении. Повторить?</p>
}

<div>
        <form asp-controller="Maintain" asp-action="Delete" method="post">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

    <div>
        <p>
            <input type="submit" class="btn btn-primary" value="Удалить" />
            <a asp-action="Index" class="btn btn-default">Отмена</a>
        </p>
    </div>
        </form>
</div>