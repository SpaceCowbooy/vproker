@model vproker.Models.Order
@{
    ViewBag.Title = "Новый Заказ";
}
<div>
    <form asp-controller="Order" asp-action="Create" method="post">
        @*<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>*@
        <div class="form-group">
            <label asp-for="ToolID" class="control-label"></label>
            <div>
                <select asp-for="ToolID" class="form-control" asp-items="@ViewBag.Tools"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ClientName"></label>
            <input asp-for="ClientName" class="form-control" placeholder="Клиент" />
            <span asp-validation-for="ClientName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ClientPhoneNumber"></label>
            <input id="clientPhoneNumber" asp-for="ClientPhoneNumber" class="form-control" placeholder="Телефон" />
            <span asp-validation-for="ClientPhoneNumber" class="text-danger"></span>
            <div id="clientInfo" class="alert alert-info" role="alert" style="display: none; max-width:280px"></div>
        </div>

        <div class="form-group">
            <label asp-for="ClientPassport"></label>
            <input id="clientPassport" asp-for="ClientPassport" class="form-control" placeholder="Серия и номер паспорта" />
            <span asp-validation-for="ClientPassport" class="text-danger"></span>
            <div id="passportAlert" class="alert" role="alert" style="display: none; max-width:280px"></div>
        </div>

        <div class="form-group">
            <label asp-for="ContractNumber"></label>
            <input asp-for="ContractNumber" class="form-control" placeholder="Номер договора" />
            <span asp-validation-for="ContractNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <div>
                @Html.TextAreaFor(e => e.Description, 1, 55, null)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PaidPledge"></label>
            <input asp-for="PaidPledge" class="form-control" />
            <span asp-validation-for="PaidPledge" class="text-danger"></span>
        </div>

        @*<div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>*@
        <p>
            <input type="submit" class="btn btn-primary" value="Создать" />
            <a href="javascript:void(0)" onClick="goBack()" class="btn btn-default">Назад</a>
        </p>
    </form>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/ts/createOrder.js"></script>
    <script type="text/javascript">
        vproker.CreateOrder.render();
    </script>
}