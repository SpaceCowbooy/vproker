@model vproker.Models.Tool
@{
    ViewBag.Title = "Редактирование Инструмента";
}
<div>
    <form asp-controller="Tool" asp-action="Update" method="post" asp-route-id="@Model.ID">
        @*<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>*@
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Purchased"></label>
            <input asp-for="Purchased" class="form-control" />
            <span asp-validation-for="Purchased" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pledge"></label>
            <input asp-for="Pledge" class="form-control" />
            <span asp-validation-for="Pledge" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DayPrice"></label>
            <input asp-for="DayPrice" class="form-control" />
            <span asp-validation-for="DayPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkShiftPrice"></label>
            <input asp-for="WorkShiftPrice" class="form-control" />
            <span asp-validation-for="WorkShiftPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HourPrice"></label>
            <input asp-for="HourPrice" class="form-control" />
            <span asp-validation-for="HourPrice" class="text-danger"></span>
        </div>
        <p>
            <input type="submit" class="btn btn-primary" value="Сохранить" />
            <a asp-action="Index" class="btn btn-default">Отмена</a>
        </p>
    </form>
</div>

