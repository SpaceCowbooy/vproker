@model vproker.Models.Tool
@{
    ViewBag.Title = "Подтвердите удаление инструмента";
}
<h3>Удалить этот инструмент?</h3>
@if (ViewBag.Retry)
{
    <p class="alert-danger">Ошибка при удалении. Повторить?</p>
}
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div>
        <form asp-controller="Tool" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
        <p><a asp-controller="Tool" asp-action="Index">Назад</a></p>
    </div>
</div>