@model vproker.Models.Tool
@{
    ViewBag.Title = "Новый Инструмент";
}
<div>
    <form asp-controller="Tool" asp-action="Create" method="post">
        @*<div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>*@
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Наименование" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div>
                <textarea rows="2" cols="20" asp-for="Description" class="form-control" placeholder="Примечание"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" placeholder="" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Purchased"></label>
            <input asp-for="Purchased" class="form-control" placeholder="" value="11/1/2014"/>
            <span asp-validation-for="Purchased" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <div>
                <textarea rows="2" cols="20" asp-for="Category" class="form-control" placeholder="Категории"></textarea>
            </div>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <!-- Price's -->
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pledge"></label>
            <input asp-for="Pledge" class="form-control" />
            <span asp-validation-for="Pledge" class="text-danger"></span>
        </div>        
        <div class="form-group">
            <label asp-for="DayPrice"></label>
            <input asp-for="DayPrice" class="form-control" />
            <span asp-validation-for="DayPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WorkShiftPrice"></label>
            <input asp-for="WorkShiftPrice" class="form-control" />
            <span asp-validation-for="WorkShiftPrice" class="text-danger"></span>
        </div>
       <div class="form-group">
            <label asp-for="HourPrice"></label>
            <input asp-for="HourPrice" class="form-control" />
            <span asp-validation-for="HourPrice" class="text-danger"></span>
        </div>
        <!--end prices -->

        <input type="submit" class="btn btn-primary" value="Создать" />
        <a asp-action="Index" class="btn btn-default">Отмена</a>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}