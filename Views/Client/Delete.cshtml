@model vproker.Models.Client

@{
    ViewBag.Title = "Подтвердите удаление клиента";
}

<h3>Удалить этого клиента?</h3>

@if (ViewBag.Retry)
{
    <p class="alert-danger">Ошибка при удалении. Повторить?</p>
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>

    <div>
        <form asp-controller="Client" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
        <p><a asp-controller="Client" asp-action="Index">Назад</a></p>

    </div>
</div>